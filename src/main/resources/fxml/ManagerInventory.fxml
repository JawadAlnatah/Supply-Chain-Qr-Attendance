<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.team.supplychain.controllers.ManagerInventoryController"
      spacing="30"
      style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Page Header -->
    <VBox spacing="10">
        <Label text="Inventory Management" styleClass="section-title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
            <style>
                -fx-text-fill: #2c3e50;
            </style>
        </Label>
        <Label text="Monitor stock levels, manage items, and track inventory across all warehouses" styleClass="subtitle-modern">
            <font>
                <Font size="14"/>
            </font>
            <style>
                -fx-text-fill: #7f8c8d;
            </style>
        </Label>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15">
        <Button fx:id="exportButton" text="Export Report" onAction="#handleExport" styleClass="action-button-secondary">
            <font>
                <Font name="System Bold" size="13"/>
            </font>
            <style>
                -fx-background-color: white;
                -fx-text-fill: #a78bfa;
                -fx-border-color: #a78bfa;
                -fx-border-width: 2px;
                -fx-background-radius: 10px;
                -fx-border-radius: 10px;
                -fx-padding: 12px 24px;
                -fx-cursor: hand;
            </style>
        </Button>
        <Button fx:id="refreshButton" text="â†» Refresh" onAction="#handleRefresh">
            <font>
                <Font size="13"/>
            </font>
            <style>
                -fx-background-color: #e0e0e0;
                -fx-text-fill: #2c3e50;
                -fx-background-radius: 10px;
                -fx-padding: 12px 24px;
                -fx-cursor: hand;
            </style>
        </Button>
    </HBox>

    <!-- Inventory Stats Cards -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
        </columnConstraints>

        <!-- Total Items Card -->
        <VBox GridPane.columnIndex="0" styleClass="stat-card-modern" spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <style>
                -fx-background-color: white;
                -fx-background-radius: 15px;
                -fx-border-color: #e0e0e0;
                -fx-border-width: 1px;
                -fx-border-radius: 15px;
                -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 12, 0, 0, 3);
            </style>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="ðŸ“¦" style="-fx-font-size: 36px;"/>
                <VBox spacing="5">
                    <Label text="Total Items" styleClass="stat-label-modern">
                        <font><Font size="12"/></font>
                        <style>-fx-text-fill: #7f8c8d;</style>
                    </Label>
                    <Label fx:id="totalItemsLabel" text="0" styleClass="stat-value-modern">
                        <font><Font name="System Bold" size="32"/></font>
                        <style>-fx-text-fill: #2c3e50;</style>
                    </Label>
                </VBox>
            </HBox>
        </VBox>

        <!-- Low Stock Card -->
        <VBox GridPane.columnIndex="1" styleClass="stat-card-modern" spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <style>
                -fx-background-color: white;
                -fx-background-radius: 15px;
                -fx-border-color: #fbbf24;
                -fx-border-width: 2px;
                -fx-border-radius: 15px;
                -fx-effect: dropshadow(gaussian, rgba(251,191,36,0.3), 12, 0, 0, 3);
            </style>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="âš ï¸" style="-fx-font-size: 36px;"/>
                <VBox spacing="5">
                    <Label text="Low Stock" styleClass="stat-label-modern">
                        <font><Font size="12"/></font>
                        <style>-fx-text-fill: #7f8c8d;</style>
                    </Label>
                    <Label fx:id="lowStockLabel" text="0" styleClass="stat-value-modern">
                        <font><Font name="System Bold" size="32"/></font>
                        <style>-fx-text-fill: #fbbf24;</style>
                    </Label>
                </VBox>
            </HBox>
        </VBox>

        <!-- Out of Stock Card -->
        <VBox GridPane.columnIndex="2" styleClass="stat-card-modern" spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <style>
                -fx-background-color: white;
                -fx-background-radius: 15px;
                -fx-border-color: #ef4444;
                -fx-border-width: 2px;
                -fx-border-radius: 15px;
                -fx-effect: dropshadow(gaussian, rgba(239,68,68,0.3), 12, 0, 0, 3);
            </style>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="âŒ" style="-fx-font-size: 36px;"/>
                <VBox spacing="5">
                    <Label text="Out of Stock" styleClass="stat-label-modern">
                        <font><Font size="12"/></font>
                        <style>-fx-text-fill: #7f8c8d;</style>
                    </Label>
                    <Label fx:id="outOfStockLabel" text="0" styleClass="stat-value-modern">
                        <font><Font name="System Bold" size="32"/></font>
                        <style>-fx-text-fill: #ef4444;</style>
                    </Label>
                </VBox>
            </HBox>
        </VBox>

        <!-- Total Value Card -->
        <VBox GridPane.columnIndex="3" styleClass="stat-card-modern" spacing="12">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <style>
                -fx-background-color: white;
                -fx-background-radius: 15px;
                -fx-border-color: #a78bfa;
                -fx-border-width: 2px;
                -fx-border-radius: 15px;
                -fx-effect: dropshadow(gaussian, rgba(167,139,250,0.3), 12, 0, 0, 3);
            </style>

            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="ðŸ’°" style="-fx-font-size: 36px;"/>
                <VBox spacing="5">
                    <Label text="Total Value" styleClass="stat-label-modern">
                        <font><Font size="12"/></font>
                        <style>-fx-text-fill: #7f8c8d;</style>
                    </Label>
                    <Label fx:id="totalValueLabel" text="0" styleClass="stat-value-modern">
                        <font><Font name="System Bold" size="28"/></font>
                        <style>-fx-text-fill: #a78bfa;</style>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </GridPane>

    <!-- Inventory Distribution Chart - Ultra Modern & Spacious -->
    <VBox spacing="25" styleClass="stat-card-modern" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="40" right="45" bottom="40" left="45"/>
        </padding>
        <style>
            -fx-background-color: linear-gradient(135deg, #ffffff 0%, #f8f9fa 50%, #f3f4f6 100%);
            -fx-background-radius: 20px;
            -fx-border-color: linear-gradient(to right, #a78bfa, #8b5cf6, #7c3aed);
            -fx-border-width: 3px;
            -fx-border-radius: 20px;
            -fx-effect: dropshadow(gaussian, rgba(167,139,250,0.3), 25, 0.1, 0, 8);
            -fx-pref-height: 700px;
            -fx-min-height: 650px;
        </style>

        <!-- Chart Header with Icon & Stats -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: linear-gradient(to bottom right, #a78bfa, #8b5cf6); -fx-background-radius: 15px; -fx-padding: 15px; -fx-effect: dropshadow(gaussian, rgba(167,139,250,0.4), 10, 0, 0, 3);">
                <Label text="ðŸ“Š" style="-fx-font-size: 40px;"/>
            </VBox>
            <VBox spacing="8">
                <Label text="Inventory Distribution Analytics" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                    <style>
                        -fx-text-fill: #2c3e50;
                    </style>
                </Label>
                <Label text="Real-time stock visualization across all product categories" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
                <HBox spacing="15" style="-fx-padding: 5px 0 0 0;">
                    <HBox spacing="6">
                        <Label text="ðŸ”„" style="-fx-font-size: 14px;"/>
                        <Label text="Auto-sync enabled" style="-fx-text-fill: #10b981; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label text="â€¢" style="-fx-text-fill: #e0e0e0;"/>
                    <HBox spacing="6">
                        <Label text="â±ï¸" style="-fx-font-size: 14px;"/>
                        <Label text="Updated just now" style="-fx-text-fill: #6b7280; -fx-font-size: 12px;"/>
                    </HBox>
                </HBox>
            </VBox>
        </HBox>

        <!-- Separator Line -->
        <HBox style="-fx-background-color: linear-gradient(to right, transparent, #e0e0e0, transparent); -fx-pref-height: 2px; -fx-max-height: 2px;"/>

        <!-- Enhanced Pie Chart with More Vertical Space -->
        <PieChart fx:id="inventoryPieChart" prefHeight="500" animated="true" legendVisible="true"
                  legendSide="RIGHT" labelsVisible="true" labelLineLength="20" startAngle="90" VBox.vgrow="ALWAYS">
            <style>
                -fx-background-color: rgba(255, 255, 255, 0.5);
                -fx-background-radius: 15px;
                -fx-padding: 25px 20px 25px 20px;
                -fx-border-color: rgba(167,139,250,0.1);
                -fx-border-width: 1px;
                -fx-border-radius: 15px;
            </style>
        </PieChart>

        <!-- Enhanced Chart Legend/Info Bar -->
        <HBox alignment="CENTER" spacing="40" style="-fx-padding: 15px 20px; -fx-background-color: rgba(167,139,250,0.08); -fx-background-radius: 12px;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="â—" style="-fx-text-fill: #a78bfa; -fx-font-size: 24px;"/>
                <VBox spacing="2">
                    <Label text="Stock Levels" style="-fx-text-fill: #2c3e50; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <Label text="By category" style="-fx-text-fill: #9ca3af; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>
            <Label text="|" style="-fx-text-fill: #d1d5db; -fx-font-size: 20px;"/>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="ðŸ“ˆ" style="-fx-font-size: 22px;"/>
                <VBox spacing="2">
                    <Label text="Live Data" style="-fx-text-fill: #2c3e50; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <Label text="Real-time sync" style="-fx-text-fill: #9ca3af; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>
            <Label text="|" style="-fx-text-fill: #d1d5db; -fx-font-size: 20px;"/>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="âš¡" style="-fx-font-size: 22px;"/>
                <VBox spacing="2">
                    <Label text="Auto-refreshed" style="-fx-text-fill: #2c3e50; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                    <Label text="Every update" style="-fx-text-fill: #9ca3af; -fx-font-size: 11px;"/>
                </VBox>
            </HBox>
        </HBox>
    </VBox>

    <!-- Inventory Table Card -->
    <VBox spacing="20" styleClass="stat-card-modern">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
        <style>
            -fx-background-color: white;
            -fx-background-radius: 15px;
            -fx-border-color: #e0e0e0;
            -fx-border-width: 1px;
            -fx-border-radius: 15px;
            -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.08), 12, 0, 0, 3);
        </style>

        <!-- Table Header with Search & Filters -->
        <VBox spacing="18">
            <!-- Title Row -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="ðŸ“¦" style="-fx-font-size: 28px;"/>
                <Label text="Inventory Items" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="22"/>
                    </font>
                    <style>
                        -fx-text-fill: #2c3e50;
                    </style>
                </Label>
                <Label fx:id="itemCountLabel" text="(0 items)" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
            </HBox>

            <!-- Search & Filter Row -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <!-- Search Field -->
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f9fa; -fx-background-radius: 12px; -fx-padding: 5px 15px; -fx-border-color: #e0e0e0; -fx-border-radius: 12px; -fx-border-width: 1px;">
                    <Label text="ðŸ”" style="-fx-font-size: 16px; -fx-text-fill: #a78bfa;"/>
                    <TextField fx:id="searchField" promptText="Search by name, category, or location..." styleClass="search-field">
                        <font><Font size="13"/></font>
                        <style>
                            -fx-background-color: transparent;
                            -fx-pref-width: 380px;
                            -fx-border-width: 0;
                            -fx-prompt-text-fill: #bdc3c7;
                        </style>
                    </TextField>
                </HBox>

                <!-- Category Filter -->
                <ComboBox fx:id="categoryFilter" promptText="All Categories" styleClass="modern-combobox">
                    <style>
                        -fx-background-color: #f8f9fa;
                        -fx-background-radius: 12px;
                        -fx-pref-width: 200px;
                        -fx-min-width: 200px;
                        -fx-border-color: #e0e0e0;
                        -fx-border-radius: 12px;
                        -fx-border-width: 1px;
                        -fx-padding: 10px 15px;
                        -fx-font-size: 13px;
                    </style>
                </ComboBox>

                <!-- Stock Status Filter -->
                <ComboBox fx:id="statusFilter" promptText="All Stock Status" styleClass="modern-combobox">
                    <style>
                        -fx-background-color: #f8f9fa;
                        -fx-background-radius: 12px;
                        -fx-pref-width: 180px;
                        -fx-min-width: 180px;
                        -fx-border-color: #e0e0e0;
                        -fx-border-radius: 12px;
                        -fx-border-width: 1px;
                        -fx-padding: 10px 15px;
                        -fx-font-size: 13px;
                    </style>
                </ComboBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Clear Filters Button -->
                <Button text="Clear Filters" onAction="#handleClearFilters">
                    <font><Font size="12"/></font>
                    <style>
                        -fx-background-color: transparent;
                        -fx-text-fill: #a78bfa;
                        -fx-background-radius: 10px;
                        -fx-padding: 8px 16px;
                        -fx-cursor: hand;
                        -fx-underline: true;
                    </style>
                </Button>
            </HBox>
        </VBox>

        <!-- Enhanced TableView -->
        <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS" style="-fx-min-height: 500px;">
            <columns>
                <!-- Item ID Column -->
                <TableColumn fx:id="itemIdColumn" text="ID" prefWidth="70"/>

                <!-- Item Name Column -->
                <TableColumn fx:id="itemNameColumn" text="Item Name" prefWidth="220"/>

                <!-- Category Column -->
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="140"/>

                <!-- Location Column -->
                <TableColumn fx:id="locationColumn" text="Location" prefWidth="130"/>

                <!-- Quantity Column -->
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>

                <!-- Reorder Level Column -->
                <TableColumn fx:id="reorderLevelColumn" text="Reorder" prefWidth="90"/>

                <!-- Unit Price Column -->
                <TableColumn fx:id="unitPriceColumn" text="Unit Price" prefWidth="110"/>

                <!-- Total Value Column -->
                <TableColumn fx:id="totalValueColumn" text="Total Value" prefWidth="120"/>

                <!-- Status Column with Badge -->
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="130"/>

                <!-- Actions Column -->
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="140"/>
            </columns>

            <!-- Empty State Placeholder -->
            <placeholder>
                <VBox alignment="CENTER" spacing="15" style="-fx-padding: 50px;">
                    <Label text="ðŸ“¦" style="-fx-font-size: 64px; -fx-opacity: 0.3;"/>
                    <Label text="No Inventory Items Found" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                    <Label text="Try adjusting your search or filters" style="-fx-font-size: 14px; -fx-text-fill: #bdc3c7;"/>
                </VBox>
            </placeholder>

            <style>
                -fx-background-color: #ffffff;
                -fx-table-cell-border-color: #e5e7eb;
                -fx-border-color: #d1d5da;
                -fx-border-width: 1.5px;
                -fx-border-radius: 12px;
                -fx-background-radius: 12px;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0.0, 0, 3);
            </style>
        </TableView>

        <!-- Table Footer with Pagination Info -->
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10px 0 0 0;">
            <Label text="Showing" style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>
            <Label fx:id="paginationLabel" text="0 items" style="-fx-text-fill: #2c3e50; -fx-font-size: 13px; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

</VBox>
