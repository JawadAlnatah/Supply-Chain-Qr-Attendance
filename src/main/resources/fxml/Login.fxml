<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.team.supplychain.controllers.LoginController"
            prefHeight="700.0" prefWidth="1100.0"
            styleClass="login-root"
            stylesheets="@../css/styles.css">

    <HBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Left Panel - Branding Section -->
        <VBox styleClass="login-left-panel-new" spacing="0" alignment="CENTER"
              HBox.hgrow="ALWAYS" prefWidth="500">
            <padding>
                <Insets top="60" right="40" bottom="60" left="40"/>
            </padding>

            <VBox alignment="CENTER" spacing="40" VBox.vgrow="ALWAYS">
                <!-- Logo Image without effects -->
                <ImageView fitWidth="280" fitHeight="280" preserveRatio="true">
                    <image>
                        <javafx.scene.image.Image url="@../images/pic.png"/>
                    </image>
                </ImageView>

                <!-- Company Name -->
                <Label text="KARTON" styleClass="login-brand-karton">
                    <font>
                        <Font name="System Bold" size="72.0" />
                    </font>
                </Label>

                <Region VBox.vgrow="ALWAYS"/>

                <!-- Footer Info -->
                <Label text="Â© 2025 Karton Inc." styleClass="login-footer-new">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </VBox>
        </VBox>

        <!-- Right Panel - Login Form (Dark Mode) -->
        <VBox styleClass="login-right-panel-dark" spacing="0" alignment="CENTER"
              HBox.hgrow="ALWAYS" prefWidth="600">
            <padding>
                <Insets top="50" right="80" bottom="50" left="80"/>
            </padding>

            <VBox alignment="CENTER" spacing="35" maxWidth="450">

                <!-- Welcome Section -->
                <VBox alignment="CENTER" spacing="12">
                    <Label text="Welcome Back!" styleClass="login-title-dark">
                        <font>
                            <Font name="System Bold" size="38.0" />
                        </font>
                    </Label>
                    <Label text="Please sign in to your account" styleClass="login-subtitle-dark">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Login Form -->
                <VBox spacing="25" alignment="CENTER">

                    <!-- Username Field (Dark Mode) -->
                    <VBox spacing="10" maxWidth="400">
                        <Label text="Username" styleClass="input-label-dark">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <HBox styleClass="input-container-dark" spacing="12" alignment="CENTER_LEFT">
                            <Label text="ðŸ‘¤" styleClass="input-icon-dark">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                            <TextField fx:id="usernameField"
                                      promptText="Enter your username"
                                      styleClass="modern-text-field-dark"
                                      HBox.hgrow="ALWAYS">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </TextField>
                        </HBox>
                    </VBox>

                    <!-- Password Field (Dark Mode) -->
                    <VBox spacing="10" maxWidth="400">
                        <Label text="Password" styleClass="input-label-dark">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                        <HBox styleClass="input-container-dark" spacing="12" alignment="CENTER_LEFT">
                            <Label text="ðŸ”’" styleClass="input-icon-dark">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Label>
                            <PasswordField fx:id="passwordField"
                                          promptText="Enter your password"
                                          styleClass="modern-password-field-dark"
                                          HBox.hgrow="ALWAYS">
                                <font>
                                    <Font size="14.0" />
                                </font>
                            </PasswordField>
                        </HBox>
                    </VBox>

                    <!-- Login Button (Dark Mode) -->
                    <Button fx:id="loginButton"
                           text="Sign In"
                           onAction="#handleLogin"
                           styleClass="login-button-dark"
                           maxWidth="400">
                        <font>
                            <Font name="System Bold" size="17.0" />
                        </font>
                    </Button>

                    <!-- Error Label -->
                    <Label fx:id="errorLabel"
                          styleClass="error-label-modern"
                          wrapText="true"
                          maxWidth="400"
                          visible="false">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </Label>
                </VBox>
            </VBox>
        </VBox>
    </HBox>
</AnchorPane>