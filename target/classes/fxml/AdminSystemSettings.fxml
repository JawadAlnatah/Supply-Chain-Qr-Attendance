<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.team.supplychain.controllers.AdminSystemSettingsController"
      spacing="30"
      style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Page Header -->
    <VBox spacing="10">
        <Label text="System Settings" styleClass="section-title">
            <font><Font name="System Bold" size="28"/></font>
            <style>-fx-text-fill: #2c3e50;</style>
        </Label>
        <Label text="Configure system parameters, database settings, backups, and application preferences" styleClass="subtitle-modern">
            <font><Font size="14"/></font>
            <style>-fx-text-fill: #7f8c8d;</style>
        </Label>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15">
        <Button fx:id="refreshButton" text="â†» Refresh" onAction="#handleRefresh">
            <font><Font size="13"/></font>
            <style>
                -fx-background-color: #e0e0e0;
                -fx-text-fill: #2c3e50;
                -fx-background-radius: 10px;
                -fx-padding: 12px 24px;
                -fx-cursor: hand;
            </style>
        </Button>
    </HBox>

    <!-- System Stats -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
        </columnConstraints>

        <VBox GridPane.columnIndex="0" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #10b981; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(16,185,129,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="â±ï¸" style="-fx-font-size: 36px;"/>
            <VBox spacing="5">
                <Label text="System Uptime"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="uptimeLabel" text="0d 0h"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #10b981;</style></Label>
            </VBox>
        </VBox>

        <VBox GridPane.columnIndex="1" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #22d3ee; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(34,211,238,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="ðŸ’¾" style="-fx-font-size: 36px;"/>
            <VBox spacing="5">
                <Label text="Database Size"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="dbSizeLabel" text="0 GB"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #22d3ee;</style></Label>
            </VBox>
        </VBox>

        <VBox GridPane.columnIndex="2" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #10b981; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(16,185,129,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="ðŸ“¥" style="-fx-font-size: 36px;"/>
            <VBox spacing="5">
                <Label text="Last Backup"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="lastBackupLabel" text="0h ago"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #10b981;</style></Label>
            </VBox>
        </VBox>

        <VBox GridPane.columnIndex="3" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #fbbf24; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(251,191,36,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="âš™ï¸" style="-fx-font-size: 36px;"/>
            <VBox spacing="5">
                <Label text="Config Files"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="configFilesLabel" text="0"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #fbbf24;</style></Label>
            </VBox>
        </VBox>
    </GridPane>

    <!-- Settings Table -->
    <VBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3); -fx-padding: 25;">

        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="System Configuration"><font><Font name="System Bold" size="20"/></font><style>-fx-text-fill: #2c3e50;</style></Label>
            <Region HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="categoryFilter" promptText="Filter by Category" styleClass="modern-combobox" style="-fx-pref-width: 200px;"/>
            <TextField fx:id="searchField" promptText="Search settings..." style="-fx-background-color: #f8f9fa; -fx-background-radius: 10px; -fx-padding: 10px 15px; -fx-pref-width: 250px; -fx-border-color: #e0e0e0; -fx-border-radius: 10px; -fx-border-width: 1px;"><font><Font size="13"/></font></TextField>
        </HBox>

        <TableView fx:id="settingsTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <columns>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="180"/>
                <TableColumn fx:id="settingNameColumn" text="Setting Name" prefWidth="220"/>
                <TableColumn fx:id="currentValueColumn" text="Current Value" prefWidth="200"/>
                <TableColumn fx:id="defaultValueColumn" text="Default" prefWidth="150"/>
                <TableColumn fx:id="modifiedByColumn" text="Modified By" prefWidth="150"/>
                <TableColumn fx:id="modifiedDateColumn" text="Modified Date" prefWidth="140"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
