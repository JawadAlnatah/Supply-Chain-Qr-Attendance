<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.team.supplychain.controllers.AdminUserManagementController"
      spacing="30"
      style="-fx-background-color: #f8f9fa;">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Page Header -->
    <VBox spacing="10">
        <Label text="User Management" styleClass="section-title">
            <font><Font name="System Bold" size="28"/></font>
            <style>-fx-text-fill: #2c3e50;</style>
        </Label>
        <Label text="Manage user accounts, roles, permissions, and access control across the system" styleClass="subtitle-modern">
            <font><Font size="14"/></font>
            <style>-fx-text-fill: #7f8c8d;</style>
        </Label>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15">
        <Button fx:id="addUserButton" text="+ Add New User" onAction="#handleAddUser">
            <font><Font name="System Bold" size="13"/></font>
            <style>
                -fx-background-color: linear-gradient(to bottom right, #22d3ee, #06b6d4);
                -fx-text-fill: white;
                -fx-background-radius: 10px;
                -fx-padding: 12px 24px;
                -fx-cursor: hand;
                -fx-effect: dropshadow(gaussian, rgba(34,211,238,0.4), 10, 0, 0, 3);
            </style>
        </Button>
        <Button fx:id="exportButton" text="Export Users" onAction="#handleExport">
            <font><Font name="System Bold" size="13"/></font>
            <style>
                -fx-background-color: white;
                -fx-text-fill: #22d3ee;
                -fx-border-color: #22d3ee;
                -fx-border-width: 2px;
                -fx-background-radius: 10px;
                -fx-border-radius: 10px;
                -fx-padding: 12px 24px;
                -fx-cursor: hand;
            </style>
        </Button>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="refreshButton" text="â†» Refresh" onAction="#handleRefresh">
            <font><Font size="13"/></font>
            <style>
                -fx-background-color: #e0e0e0;
                -fx-text-fill: #2c3e50;
                -fx-background-radius: 10px;
                -fx-padding: 12px 24px;
                -fx-cursor: hand;
            </style>
        </Button>
    </HBox>

    <!-- User Stats -->
    <GridPane hgap="20" vgap="20">
        <columnConstraints>
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
            <ColumnConstraints percentWidth="25" />
        </columnConstraints>

        <VBox GridPane.columnIndex="0" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #22d3ee; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(34,211,238,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="ðŸ‘¥" style="-fx-font-size: 36px;"/>
            <VBox spacing="5">
                <Label text="Total Users"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="totalUsersLabel" text="0"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #22d3ee;</style></Label>
            </VBox>
        </VBox>

        <VBox GridPane.columnIndex="1" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #10b981; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(16,185,129,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="âœ“" style="-fx-font-size: 36px; -fx-text-fill: #10b981;"/>
            <VBox spacing="5">
                <Label text="Active Users"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="activeUsersLabel" text="0"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #10b981;</style></Label>
            </VBox>
        </VBox>

        <VBox GridPane.columnIndex="2" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #fbbf24; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(251,191,36,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="â³" style="-fx-font-size: 36px;"/>
            <VBox spacing="5">
                <Label text="Pending Approvals"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="pendingApprovalsLabel" text="0"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #fbbf24;</style></Label>
            </VBox>
        </VBox>

        <VBox GridPane.columnIndex="3" spacing="12" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #22d3ee; -fx-border-width: 2px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(34,211,238,0.3), 12, 0, 0, 3); -fx-padding: 20;">
            <Label text="ðŸ”‘" style="-fx-font-size: 36px;"/>
            <VBox spacing="5">
                <Label text="Role Distribution"><font><Font size="12"/></font><style>-fx-text-fill: #7f8c8d;</style></Label>
                <Label fx:id="rolesLabel" text="0 Roles"><font><Font name="System Bold" size="32"/></font><style>-fx-text-fill: #22d3ee;</style></Label>
            </VBox>
        </VBox>
    </GridPane>

    <!-- Users Table -->
    <VBox spacing="15" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 15px; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-border-radius: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 3); -fx-padding: 25;">

        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="User Directory"><font><Font name="System Bold" size="20"/></font><style>-fx-text-fill: #2c3e50;</style></Label>
            <Region HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="roleFilter" promptText="Filter by Role" styleClass="modern-combobox" style="-fx-pref-width: 180px;"/>
            <ComboBox fx:id="statusFilter" promptText="Filter by Status" styleClass="modern-combobox" style="-fx-pref-width: 180px;"/>
            <TextField fx:id="searchField" promptText="Search users..." style="-fx-background-color: #f8f9fa; -fx-background-radius: 10px; -fx-padding: 10px 15px; -fx-pref-width: 250px; -fx-border-color: #e0e0e0; -fx-border-radius: 10px; -fx-border-width: 1px;"><font><Font size="13"/></font></TextField>
        </HBox>

        <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <columns>
                <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="100"/>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
                <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="180"/>
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="220"/>
                <TableColumn fx:id="roleColumn" text="Role" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="lastLoginColumn" text="Last Login" prefWidth="140"/>
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="180"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
